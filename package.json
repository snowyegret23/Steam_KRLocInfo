{
  "name": "kosteam",
  "version": "1.0.0",
  "description": "Steam Korean Localization Info Scraper & Chrome Extension",
  "type": "module",
  "scripts": {
    "scrape:steamapp": "node scrapers/steamapp.js",
    "scrape:quasarplay": "node scrapers/quasarplay.js",
    "scrape:directg": "node scrapers/directg.js",
    "scrape:stove": "node scrapers/stove.js",
    "scrape:curator": "python scrapers/steam_curator_dump.py --quasarplay",
    "scrape:all": "npm run scrape:steamapp && npm run scrape:quasarplay && npm run scrape:directg && npm run scrape:stove && npm run scrape:curator",
    "scrape:merge": "npm run merge",
    "merge": "node scripts/merge.js",
    "resolve-links": "node scripts/resolve-links.js",
    "resolve-links:verify": "node scripts/resolve-links.js --verify",
    "build:data": "npm run scrape:all && npm run merge",
    "build:data:full": "npm run scrape:all && npm run resolve-links && npm run merge",
    "build:ext": "rollup -c",
    "build:ext:prod": "cross-env NODE_ENV=production rollup -c",
    "build:ext:watch": "rollup -c -w",
    "build": "npm run build:ext:prod",
    "clean": "node -e \"const fs=require('fs');['dist'].forEach(d=>fs.rmSync(d,{recursive:true,force:true}))\"",
    "zip:chrome": "cd dist/chrome && zip -r ../../kosteam-chrome.zip .",
    "zip:firefox": "cd dist/firefox && zip -r ../../kosteam-firefox.zip .",
    "zip": "npm run zip:chrome && npm run zip:firefox",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.34.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "cross-env": "^10.0.0",
    "rollup": "^4.40.0",
    "rollup-plugin-copy": "^3.5.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {}
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
