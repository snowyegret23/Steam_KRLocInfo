{
  "manifest_version": 3,
  "name": "KOSTEAM",
  "version": "1.3.0",
  "description": "Steam 상점 페이지에서 한국어 패치 정보를 확인하세요",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://store.steampowered.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://store.steampowered.com/app/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://store.steampowered.com/*"
      ],
      "js": [
        "search_bypass.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "alevo0918@gmail.com",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}